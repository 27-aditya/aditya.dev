---
import ContentCard from "./ContentCard.astro";

interface Props {
  title?: string;
  heading?: string;
  body?: string;
}

const { title, heading ,body } = Astro.props;
---

<div>
  {
    <div class="p-4 border border-darkslate-400 bg-darkslate-500 rounded-xl m-1">
      <h3 class="p-1 text-white">{heading}</h3>
      <ContentCard title={title} body={body}>
        <slot />
      </ContentCard>
    </div>
  }
</div>
